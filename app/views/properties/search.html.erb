<h1>Search Results...</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Bedroom count</th>
    <th>Distance from search</th>
    <th></th>
  </tr>

<% @properties.each do |property| %>
  <tr>
    <td><%= property[:property].name %></td>
    <td><%= property[:property].bedroom_count %></td>
    <td><%= property[:distance] %> km</td>
    <td>
        <%= link_to property, :class => "btn" do %>
            <i class="icon-info-sign"></i> Show
        <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />
